- content_for :title do
  = @project.title

.browser-default
  - if @project.project_source
    = link_to @project.project_source
    %br
  = @project.completed_at
  = @markdown.render(@project.description).html_safe

- if can? :manage, @project
  .fixed-action-btn.vertical
    = link_to edit_project_path(@project), class: 'btn-floating btn-large btn-pirate-red waves-effect waves-light' do
      %i.large.material-icons mode_edit