= simple_form_for(@showcase) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :description
    = f.input :released_at
    = f.input :image_url
    = f.input :active, as: :boolean
    %br
    = f.association :projects, include_blank: true

  .form-actions
    = f.button :submit
